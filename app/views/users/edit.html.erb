
<div class="main">
	<div class="container-fluid">
		<div class="row">
			<h1 style="line-height: 3em">お客様情報編集画面</h1>
			<div class="col-md-2"></div>
			<div class="col-md-8">
			<%= form_for(@user) do |f| %>
				<p>郵便番号</p>
				<div class="form-group">
				<%= f.text_field :zip_code, class: 'form-control',placeholder: '郵便番号を入力してください' %>
				</div>
				<p>お届け先住所</p>
				<div class="form-group">
				<%= f.text_field :home_address, class: 'form-control',placeholder: '住所を入力してください' %>
				</div>
				<button type="submit" class="btn btn-default">お届け先情報更新</button>
			<% end %>

			<%= link_to "サービスを退会する", user_path(@user.id), method: :delete, "data-confirm"=> "本当に退会されますか？" %>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
</div>
